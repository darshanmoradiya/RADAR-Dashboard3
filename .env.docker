# Docker Environment Configuration
# Copy this file to .env in the same directory as docker-compose.yml

# Backend API URL - Uses Docker service name from docker-compose
# Frontend will connect to backend via this URL
VITE_BACKEND_URL=http://backend:3001

# OpenSearch Configuration (Backend uses these)
OPENSEARCH_HOST=192.168.92.143
OPENSEARCH_PORT=9200
OPENSEARCH_PROTOCOL=https
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=MyStrong#Pass90

# OpenSearch Indices
OPENSEARCH_INDEX_SCANS=radar-scans
OPENSEARCH_INDEX_DEVICES=radar-devices

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=production
NODE_TLS_REJECT_UNAUTHORIZED=0

# For running OpenSearch in Docker (uncomment if using Docker OpenSearch):
# OPENSEARCH_HOST=opensearch
